{% extends 'layouts/default.twig' %}

{% block content %}
    <div class="history-container">
        <div class="history-list">
            <h1>{{ users|length }} utilisateurs</h1><br>
            <table>
                <thead>
                <tr>
                    <th>Pr√©nom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Livre en cours</th>
                </tr>
                </thead>
                <tbody>
                 {% for user in users %}
                     <tr onclick="document.location = '/admin/utilisateur/{{ user.id }}';">
